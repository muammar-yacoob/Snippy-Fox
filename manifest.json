{
    "manifest_version": 3,
    "name": "Snippy Fox",
    "version": "1.0",
    "author": "Spark Games",
    "homepage_url": "https://spark-games.co.uk",
    "description": "Mark pages to be revisited with a custom note.",
    "permissions": [
      "storage",
      "contextMenus",
      "activeTab",
      "notifications"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }